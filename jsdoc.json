{
  "opts": {
    "destination": "docs/website",
    "recurse": true,
    "readme": "docs/WEBSITE_README.md",
    "template": "node_modules/better-docs"
  },
  "tags": {
    "allowUnknownTags": [
      "blocking",
      "platform",
      "component"
    ]
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript"
  ],
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.(ts|tsx)?$"
  }
}
